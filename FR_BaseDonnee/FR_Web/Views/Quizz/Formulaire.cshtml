@model FR_Web.Models.ViewModel.FormViewModel
@{
    ViewBag.Title = "Formulaire";
    Layout = "~/Views/Quizz/_QuizzLayout.cshtml";
}

<h2>Formulaire</h2>

@Html.ValidationSummary()

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <ul>
        @foreach (var question in Model.Quizz.Questions)
        {
            <li>@question.Libelle</li>
            <ul id="ulForm">
                @foreach (var reponse in question.Reponses)
                {
                    <li>@*@Html.RadioButton(question.QuestionId.ToString(), reponse.ReponseId,question.QuestionId)*@<input type="radio" id="@reponse.ReponseId" name="@question.QuestionId" class="rb" value="@reponse.Libelle"/> @reponse.Libelle</li>//getelementbyclass pour recuperer les checksbox reponse  
                }
            </ul>
        }
    </ul>

    <input type="submit" value="Submit" class="btn-success" />
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


