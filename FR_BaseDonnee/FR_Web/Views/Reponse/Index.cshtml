@model IEnumerable<FR_Web.Models.Reponse>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Reponse/_ReponseLayout.cshtml";
}

<h2>Index Reponse</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReponseId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Libelle)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReponseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Libelle)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ReponseId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ReponseId }) 
            </td>
        </tr>
    }
    </table>
<input type="button" value="New" class="create-button" />
<div id="details">

</div>
    @*<script type="text/javascript">
        $("#details").load("/ReponseController/GetModule?partialName=_createReponse");
    </script>*@
<script type="text/javascript">

    $(document).ready(function ()
    {
        $(".create-button").on("click", function ()
        {
            $.ajax()
                .done(function (partialViewResult)
                {
                    $("#details").html(partialViewResult);
                });
        })
    });
</script>
