@model FR_Web.Models.Question
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Reponse</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Libelle)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Libelle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Niveau)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Niveau)
        </dd>

        <dt>
            Réponses
        </dt>
        <dd>
            <ul>
            @foreach (var reponse in Model.Reponses)
            {
                <li>
                    @reponse.Libelle
                </li>
            }
            </ul>
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.QuestionId)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>