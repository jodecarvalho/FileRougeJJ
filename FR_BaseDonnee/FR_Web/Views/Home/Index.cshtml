@model FR_Web.Models.Agent

@{
    ViewBag.Title = "Portail de connexion à Fil Rouge";
}

<div class="jumbotron">
    <h1>Portail de connexion</h1>
</div>

@using (Html.BeginForm("EnterAgent", "Home", FormMethod.Post, new { id = "Form1" }))
{
    <div class="row">
        <div class="col-lg-2">Votre numéro d'identifiant</div>
        <div class="col-lg-10">
            @Html.TextBoxFor(a => a.AgentId, new { @class = "form-control" })
        </div>
    </div>

    <br />
    <div class="row">
        <div class="col-lg-12"><input type="submit" value="Submit" class="btn btn-primary"></div>

    </div>
}